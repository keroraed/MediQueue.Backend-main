@page
@model MediQueue.APIs.Pages.Admin.UsersModel
@{
    ViewData["Title"] = "إدارة المستخدمين";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-users"></i> إدارة المستخدمين</h2>
</div>

<div class="card">
    <div class="card-header">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">تصفية حسب الدور</label>
                <select name="role" class="form-select" onchange="this.form.submit()">
                    <option value="all" selected="@(Model.SelectedRole == "all")">جميع الأدوار</option>
                    <option value="Patient" selected="@(Model.SelectedRole == "Patient")">مريض</option>
                    <option value="Clinic" selected="@(Model.SelectedRole == "Clinic")">عيادة</option>
                    <option value="Admin" selected="@(Model.SelectedRole == "Admin")">مشرف</option>
                </select>
            </div>
            <div class="col-md-4">
                <label class="form-label">تصفية حسب الحالة</label>
                <select name="status" class="form-select" onchange="this.form.submit()">
                    <option value="all" selected="@(Model.SelectedStatus == "all")">جميع الحالات</option>
                    <option value="active" selected="@(Model.SelectedStatus == "active")">نشط</option>
                    <option value="locked" selected="@(Model.SelectedStatus == "locked")">محظور</option>
                </select>
            </div>
        </form>
    </div>
    <div class="card-body">
        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i> @Model.SuccessMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle"></i> @Model.ErrorMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (Model.Users.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>البريد الإلكتروني</th>
                            <th>الاسم</th>
                            <th>الهاتف</th>
                            <th>الدور</th>
                            <th>الحالة</th>
                            <th>تاريخ الإنشاء</th>
                            <th>آخر تسجيل دخول</th>
                            <th>الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users)
                        {
                            <tr>
                                <td>
                                    @user.Email
                                    @if (user.IsEmailConfirmed)
                                    {
                                        <i class="fas fa-check-circle text-success" title="البريد مؤكد"></i>
                                    }
                                </td>
                                <td>@user.DisplayName</td>
                                <td>@user.PhoneNumber</td>
                                <td><span class="badge bg-@(GetRoleBadgeColor(user.Role))">@user.Role</span></td>
                                <td>
                                    @if (user.IsLocked)
                                    {
                                        <span class="badge bg-danger">محظور</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">نشط</span>
                                    }
                                </td>
                                <td>@user.DateCreated.ToString("MMM dd, yyyy")</td>
                                <td>@(user.LastLoginDate?.ToString("MMM dd, yyyy") ?? "لم يسجل دخولاً")</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        @if (!user.IsLocked && user.Role != "Admin")
                                        {
                                            <form method="post" asp-page-handler="Lock" asp-route-userId="@user.Id" class="d-inline">
                                                <button type="submit" class="btn btn-warning" title="حظر المستخدم" onclick="return confirm('هل تريد حظر هذا المستخدم؟')">
                                                    <i class="fas fa-lock"></i>
                                                </button>
                                            </form>
                                        }
                                        @if (user.IsLocked)
                                        {
                                            <form method="post" asp-page-handler="Unlock" asp-route-userId="@user.Id" class="d-inline">
                                                <button type="submit" class="btn btn-success" title="رفع الحظر">
                                                    <i class="fas fa-unlock"></i>
                                                </button>
                                            </form>
                                        }
                                        @if (user.Role != "Admin")
                                        {
                                            <form method="post" asp-page-handler="Delete" asp-route-userId="@user.Id" class="d-inline">
                                                <button type="submit" class="btn btn-danger" title="حذف المستخدم" onclick="return confirm('هل أنت متأكد من حذف هذا المستخدم؟')">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="mt-3">
                <p class="text-muted">إجمالي المستخدمين: @Model.Users.Count</p>
            </div>
        }
        else
        {
            <p class="text-muted text-center py-4">لا يوجد مستخدمون</p>
        }
    </div>
</div>

@functions {
    string GetRoleBadgeColor(string role)
    {
        return role switch
        {
            "Admin" => "danger",
            "Clinic" => "primary",
            "Patient" => "info",
            _ => "secondary"
        };
    }
}
