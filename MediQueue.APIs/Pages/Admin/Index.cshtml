@page
@model MediQueue.APIs.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "لوحة التحكم";
}

<div class="row">
    <div class="col-md-3 mb-4">
        <div class="card stat-card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2">إجمالي العيادات</h6>
                        <h2 class="mb-0">@Model.TotalClinics</h2>
                    </div>
                    <i class="fas fa-clinic-medical fa-3x opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-4">
        <div class="card stat-card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2">إجمالي المرضى</h6>
                        <h2 class="mb-0">@Model.TotalPatients</h2>
                    </div>
                    <i class="fas fa-users fa-3x opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-4">
        <div class="card stat-card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2">إجمالي المواعيد</h6>
                        <h2 class="mb-0">@Model.TotalAppointments</h2>
                    </div>
                    <i class="fas fa-calendar-check fa-3x opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-4">
        <div class="card stat-card bg-warning text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2">مواعيد اليوم</h6>
                        <h2 class="mb-0">@Model.TodayAppointments</h2>
                    </div>
                    <i class="fas fa-calendar-day fa-3x opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-clock"></i> المواعيد الأخيرة</h5>
                <a asp-page="/Admin/Appointments" class="btn btn-sm btn-primary">عرض الكل</a>
            </div>
            <div class="card-body">
                @if (Model.RecentAppointments.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>الرقم</th>
                                    <th>المريض</th>
                                    <th>العيادة</th>
                                    <th>التاريخ والوقت</th>
                                    <th>الحالة</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var appointment in Model.RecentAppointments)
                                {
                                    <tr>
                                        <td>@appointment.Id</td>
                                        <td>@appointment.PatientName</td>
                                        <td>@appointment.ClinicName</td>
                                        <td>@appointment.AppointmentDate.ToString("MMM dd, yyyy hh:mm tt")</td>
                                        <td>
                                            <span class="badge bg-@(GetStatusColor(appointment.Status))">
                                                @appointment.Status
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted text-center py-4">لا توجد مواعيد حديثة</p>
                }
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStatusColor(string status)
    {
        return status switch
        {
            "Pending" => "warning",
            "Confirmed" => "info",
            "Completed" => "success",
            "Cancelled" => "danger",
            _ => "secondary"
        };
    }
}
