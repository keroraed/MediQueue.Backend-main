@page
@model MediQueue.APIs.Pages.Admin.ClinicsModel
@{
    ViewData["Title"] = "Clinic Management";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-clinic-medical"></i> Clinic Management</h2>
</div>

<div class="card">
    <div class="card-body">
        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i> @Model.SuccessMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle"></i> @Model.ErrorMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (Model.Clinics.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Doctor Name</th>
                            <th>Specialty</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>City</th>
                            <th>Rating</th>
                            <th>Appointments</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var clinic in Model.Clinics)
                        {
                            <tr>
                                <td>@clinic.Id</td>
                                <td>@clinic.DoctorName</td>
                                <td><span class="badge bg-primary">@clinic.Specialty</span></td>
                                <td>@clinic.Email</td>
                                <td>@clinic.PhoneNumber</td>
                                <td>@clinic.City</td>
                                <td>
                                    @if (clinic.AverageRating.HasValue)
                                    {
                                        <span class="badge bg-warning">
                                            <i class="fas fa-star"></i> @clinic.AverageRating.Value.ToString("F1")
                                            <small>(@clinic.TotalRatings)</small>
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No ratings</span>
                                    }
                                </td>
                                <td>@clinic.TotalAppointments</td>
                                <td>
                                    <form method="post" asp-page-handler="Delete" asp-route-clinicId="@clinic.Id" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-danger" title="Delete Clinic" onclick="return confirm('Are you sure you want to delete this clinic?')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="mt-3">
                <p class="text-muted">Total Clinics: @Model.Clinics.Count</p>
            </div>
        }
        else
        {
            <p class="text-muted text-center py-4">No clinics found</p>
        }
    </div>
</div>
